<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <MenuBar>
         <menus>
            <Menu mnemonicParsing="false" text="Опции">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#startClient" text="Подключиться" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <HBox prefHeight="197.0" prefWidth="400" GridPane.rowIndex="1">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <TextArea fx:id="userList" editable="false" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </VBox>
            <VBox prefHeight="114.0" prefWidth="300">
               <children>
                  <TextArea editable="false" fx:id="messageWindow" prefHeight="200.0" prefWidth="300.0" />
               </children>
            </VBox>
         </children></HBox>
      <HBox prefHeight="35.0" prefWidth="400" GridPane.rowIndex="2">
         <children>
            <HBox prefHeight="35.0" prefWidth="297.0">
               <children>
                  <TextField fx:id="textField" prefHeight="25.0" prefWidth="272.0" onAction="#send" promptText="Введите сообщение..."/>
               </children>
            </HBox>
            <HBox prefHeight="35.0" prefWidth="100.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#send" prefHeight="25.0" prefWidth="81.0" text="Отправить" />
               </children>
            </HBox>
         </children>
      </HBox>

   </children>
</GridPane>
